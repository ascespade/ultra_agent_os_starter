{
  "name": "ultra-agent-os",
  "version": "1.0.0",
  "description": "Ultra Agent OS - Railway Multi-Service Deployment",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "install:all": "npm install --workspaces",
    "build": "echo No build required",
    "ports:init": "node scripts/port-manager.js init",
    "ports:status": "node scripts/port-manager.js status",
    "ports:clear": "node scripts/port-manager.js clear",
    "start": "npm run start:prod",
    "start:prod": "concurrently -n api,worker -c blue,green \"npm run start:api\" \"npm run start:worker\"",
    "start:dev": "npm run ports:init && concurrently -n api,worker,ui -c blue,green,yellow \"npm run start:api\" \"npm run start:worker\" \"npm run start:ui:dev\"",
    "start:api": "cd apps/api && npm start",
    "start:worker": "cd apps/worker && npm start",
    "start:ui:dev": "cd apps/ui && npm start",
    "railway:setup": "node scripts/railway-setup.js",
    "railway:deploy": "railway up",
    "railway:logs": "railway logs -f",
    "railway:status": "railway status",
    "railway:health": "curl -f http://localhost:3000/health || echo 'Health check failed'",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js"
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "dotenv": "^17.2.3",
    "pg": "^8.17.2",
    "redis": "^4.7.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.11"
  }
}
