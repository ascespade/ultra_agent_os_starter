# Ultra Agent OS - Environment Variables Template
# ⚠️  COPY TO .env AND FILL IN VALUES - DO NOT COMMIT VALUES ⚠️

# ===== CORE INFRASTRUCTURE =====
NODE_ENV=development
HOST=localhost
PORT=3000
# DATABASE_URL=postgres://user:password@localhost:5432/ultra_agent
# REDIS_URL=redis://localhost:6379/0

# ===== SECURITY =====
JWT_SECRET=your-jwt-secret-here
INTERNAL_API_KEY=your-internal-api-key-here
DATABASE_ENCRYPTION_KEY=your-database-encryption-key-here
REDIS_PASSWORD=your-redis-password-here
SESSION_SECRET=your-session-secret-here
# DEFAULT_ADMIN_PASSWORD=generated-automatically-if-missing

# ===== ADAPTERS =====
OLLAMA_URL=http://localhost:11434
DOCKER_HOST=unix:///var/run/docker.sock
DATA_DIR=./data

# ===== ADDITIONAL SECURITY =====
WEBHOOK_SECRET=your-webhook-secret-here
OAUTH_CLIENT_SECRET=your-oauth-client-secret-here
ENCRYPTION_IV=your-encryption-iv-here
RATE_LIMIT_SECRET=your-rate-limit-secret-here

# ===== RATE LIMITING =====
RATE_LIMIT_AI_RATE_SEC=8
RATE_LIMIT_AI_BURST=25
RATE_LIMIT_LIGHT_RATE_SEC=50
RATE_LIMIT_LIGHT_BURST=100

# ===== MULTI-TENANT =====
DEFAULT_TENANT_ID=default
TENANT_ISOLATION_ENABLED=true

# ===== MONITORING =====
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
LOG_LEVEL=debug
