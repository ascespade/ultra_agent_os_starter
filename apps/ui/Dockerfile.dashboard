FROM nginx:alpine

# Copy the enhanced dashboard
COPY apps/ui/src/dashboard-enhanced.html /usr/share/nginx/html/index.html

# Copy any additional static assets if needed
COPY apps/ui/src/*.js /usr/share/nginx/html/ || true
COPY apps/ui/src/*.css /usr/share/nginx/html/ || true

# Create nginx configuration
RUN echo 'server { \
    listen 3000; \
    server_name localhost; \
    location / { \
        root /usr/share/nginx/html; \
        index index.html; \
        try_files $uri $uri/ /index.html; \
    } \
    # Add CORS headers for API calls \
    location /api/ { \
        proxy_pass https://ultra-agent-api-production.up.railway.app; \
        proxy_set_header Host ultra-agent-api-production.up.railway.app; \
        proxy_set_header X-Real-IP $remote_addr; \
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for; \
        proxy_set_header X-Forwarded-Proto $scheme; \
    } \
}' > /etc/nginx/conf.d/default.conf

EXPOSE 3000

CMD ["nginx", "-g", "daemon off;"]
