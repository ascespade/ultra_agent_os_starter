services:
  redis:
    image: redis:7-alpine
    restart: unless-stopped
    ports:
      - "127.0.0.1:6379:6379"

  ollama:
    image: ollama/ollama:latest
    restart: unless-stopped
    ports:
      - "127.0.0.1:11434:11434"
    volumes:
      - ollama_data:/root/.ollama
    environment:
      - OLLAMA_HOST=0.0.0.0

  api:
    image: node:20-alpine
    working_dir: /app
    volumes:
      - ./api:/app
      - /data/agent:/data/agent
    command: ["sh", "-c", "npm install && node server.js"]
    environment:
      - REDIS_URL=redis://redis:6379
      - DATA_DIR=/data/agent
      - OLLAMA_URL=http://ollama:11434
      - DOCKER_HOST=unix:///var/run/docker.sock
    depends_on: [redis, ollama]
    restart: unless-stopped
    ports:
      - "127.0.0.1:3000:3000"
    user: "1000:1000"

  ui:
    image: node:20-alpine
    working_dir: /app
    volumes:
      - ./ui:/app
    command: ["sh", "-c", "npm install && node server.js"]
    ports:
      - "127.0.0.1:8088:8088"
    depends_on: [api]
    restart: unless-stopped
    user: "1000:1000"

  worker:
    image: node:20-alpine
    working_dir: /app
    volumes:
      - ./api:/app
      - /data/agent:/data/agent
    command: ["sh", "-c", "npm install && node worker.js"]
    environment:
      - REDIS_URL=redis://redis:6379
      - DATA_DIR=/data/agent
      - OLLAMA_URL=http://ollama:11434
      - DOCKER_HOST=unix:///var/run/docker.sock
    depends_on: [redis, ollama]
    restart: unless-stopped
    user: "1000:1000"

volumes:
  ollama_data:
